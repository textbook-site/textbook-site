			<table class="table inventory-table">
			<tr>
				<th>Book Name</th>
				<th>Author</th>
				<th>Condition</th>
				<th>Price</th>
			</tr>
		{{#each user.profile.books}}
			<tr>
				<td>{{this.name}}</td>
				<td>{{this.author}}</td>
				<td>{{this.condition}}</td>
				<td>${{this.price}}</td>
