<p id="h3">Shopping Cart</p>
	<p id="infoMessage" class="bg-info hidden"></p>
	{{#if books}}
	<table class="table" id="purchaseItems">
		<tr>
			<th>ISBN</th>
			<th>Condition</th>
			<th>Price</th>
			<th>Remove</th>
		</tr>
	{{#each books}}
		<tr>
			<td>{{this.isbn}}</td>
			<td>{{this.condition}}</td>
			<td class="bookPrice">{{this.price}}</td>
			<td>
				{{!--<form action="/removeFromCart/{{this._id}}" method="post">--}}
					<input type="hidden" name="bookId" value="{{this._id}}"/>
					<button class="btn btn-danger removeFromCartBtn button3" sellerBookId="{{this._id}}">Remove From Cart</button>
				{{!--</form>--}}
			</td>
		</tr>
	{{/each}}
	</table>
	<form action="/paymentInformation" method="get">
		<button class="btn btn-primary">Purchase</button>
	</form>
	{{else}}
		<p>You shopping cart is empty.</p>
	{{/if}}
	{{#if error}}
		{{error}}
	{{/if}}
