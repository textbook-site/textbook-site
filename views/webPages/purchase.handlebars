<div class="row">
    <div class="col-md-4 col-md-offset-4">
		<article class="purchase">
			<h3>Shopping Cart</h3>
			{{#if books}}
				<div id="wrapper">
				{{#each books}}
				    <ul class="display_books">
				      <li><a class="bookname" href="books/{{this._id}}">{{this.name}}</a></li>
				  	</ul>
				{{/each}}
				</div>
				<button type="submit" class="btn btn-primary btn-lg">Checkout</button>
			{{else}}
				<p>You shopping cart is empty.</p>
			{{/if}}
				
		</article>
		{{#if error}}
        {{error}}
        {{/if}}
    </div>
</div>