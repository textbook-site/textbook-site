<form action="/purchase" method="post">
    <div class='row'>
        <div class="col-md-6 col-md-offset-3">
            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" name="name" id="name">
            </div>
            <div class="form-group">
                <label>Card number</label>
                <input type="text" class="form-control" name="cardNumber" id="cardNumber">
            </div>
            <div class="form-group">
                <label>Address</label>
                <input type="text" class="form-control" name="address" id="address">
            </div>
        </div>
    </div>
    <div class='row'>
        <div class="col-md-10 col-md-offset-2">
            <div class="form-group">
                <label>CVC</label>
                <input class="cardDetail" type="text" class="form-control" name="cvc" id="cvc" placeholder="ex. 343">
                <label>Expiration</label>
                <input class="cardDetail" type="text" class="form-control" name="expirationMonth" id="expirationMonth" placeholder="mm">
                <input class="cardDetail" type="text" class="form-control" name="expirationYear" id="expirationYear" placeholder="yyyy">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-8">
            <button type="submit" class="btn btn-primary">Purchase Books</button>
        </div>
    </div>
</form>