<div class="row">
    <div class="col-md-4 col-md-offset-4">
        {{#if book}}
        <h1>{{book.name}}</h1>
        <h2>By {{book.author}}</h2>
        <form action="/editBook" method="post">
            <div class="form-group">
                <div class="form-group">
                    <input type="hidden" name="userBookID" value="{{book._id}}"/>
                    <label for="condition">Condition</label>
                    <br/>
                    <select id="condition" name="condition">
                    {{#select book.condition}}
                    <option value="New">New</option>
                    <option value="Like New">Like New</option>
                    <option value="Very Good">Very Good</option>
                    <option value="Good">Good</option>
                    <option value="Acceptable">Acceptable</option>
                    <option value="Poor">Poor</option>
                    {{/select}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input type="number" step="0.01" class="form-control" id="price" name="price" value={{book.price}} placeholder={{book.price}}>
                </div>
                <button type="submit" class="btn btn-primary btn-lg">Update Book</button>
            </div>
        </form>
        
        {{else}}
        An unexpected error has occurred, please proceed to the <a href="/">home page</a>
        {{/if}}
        {{#if error}} {{error}} {{/if}}
        </div>
    </div>